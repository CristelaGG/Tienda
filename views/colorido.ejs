<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tity Creations</title>
  <link rel="stylesheet" href="/styles.css">
    <!-- Fuente cursiva elegante -->
    <link href="https://fonts.googleapis.com/css2?family=Great+Vibes&family=Roboto:wght@300;400&display=swap" rel="stylesheet">
</head>
<body>
    <!-- Encabezado -->
    <header>
        <nav>
            <ul>
                <li><a href="/">Inicio</a></li>
                <li><a href="/nosotros">Sobre nosotros</a></li>
                <li><a href="/contacto">Contacto</a></li>
            </ul>
        </nav>

        <div class="icons">
            <% if (typeof user !== 'undefined' && user) { %>
                <span style="margin-right: 15px; color: #444;">Hola, <%= user.usuario %></span>
                <a href="/logout" style="margin-right: 10px;">Cerrar sesi√≥n</a>
            <% } else { %>
                <a href="/login">Iniciar sesi√≥n</a>
            <% } %>
            <span class="icon">üë§</span>
            <a href="/carrito"><span class="icon">üõí</span></a>
        </div>
    </header>

<div class="logo">
    <h1>Cat√°logo</h1>
    <p class="slogan">Colorido</p>  
</div>
    
    <!-- Estilos de ropa (din√°mico) -->
    <section class="styles_c">
      <% if (Array.isArray(products) && products.length) { %>
        <% products.forEach(function(p) { %>
          <article class="card">
            <div class="thumb"><img src="<%= p.imagen %>" alt="<%= p.producto %>"></div>
            <h4 class="title"><%= p.producto %></h4>
            <div class="meta">
              <div class="price">$<%= Number(p.precio).toFixed(2) %></div>
              <div class="stock"><%= Number(p.cantidad) > 0 ? 'En stock' : 'Agotado' %></div>
            </div>
            <div class="actions">
              <form action="/agregar-carrito" method="POST" style="display: inline;">
                <input type="hidden" name="producto" value="<%= p.producto %>">
                <input type="hidden" name="precio" value="<%= p.precio %>">
                <input type="hidden" name="imagen" value="<%= p.imagen %>">
                <input type="hidden" name="estilo" value="colorido">
                <button type="submit" class="small-btn add">Agregar</button>
              </form>
              <form action="/comprar-directo" method="POST" style="display: inline;">
                <input type="hidden" name="producto" value="<%= p.producto %>">
                <input type="hidden" name="precio" value="<%= p.precio %>">
                <input type="hidden" name="imagen" value="<%= p.imagen %>">
                <input type="hidden" name="estilo" value="colorido">
                <button type="submit" class="small-btn buy">Comprar</button>
              </form>
            </div>
          </article>
        <% }); %>
      <% } else { %>
        <p>No hay productos disponibles.</p>
      <% } %>
    </section>

    <section class="styles_b">
    <article class="card">
  <button class="btn-back"><a href="/">‚Üê Volver al inicio</a></button>
    </article>
    </section>

    <!-- Footer -->
    <footer>
        <p>&copy; 2025 Tity Creations. Todos los derechos reservados.</p>
    </footer>
</body>
</html>